@model IEnumerable<CRUDModalMVC.Models.Student>



<br /><br />

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <table class="table">
        <tr>
            <td>
                <p>
                    @Html.ActionLink("Create New", "AddEditRecord", "Home", null, new { @id = "openDialog", @class = "btn btn-success" })
                </p>

            </td>
        </tr>
    </table>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State)
                </td>
                <td>
                    @Html.ActionLink("Edit", "AddEditRecord", new { id = item.StudenId }, new { @class = "editDialog btn btn-info" })
                    @Html.ActionLink("Details", "Details", new { id = item.StudenId }, new { @class = "viewDialog btn btn-primary" })
                    @Html.ActionLink("Delete", "DeleteRecord", new { id = item.StudenId }, new { @class = "confirmDialog btn btn-danger" })
                </td>
            </tr>
        }

    </table>
    <div id="dialogConfirm" style="display:none">
        <span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 0 20px 0;"></span>
        Are you sure to Delete?
    </div>

    <div class="form-group" id="dialogEdit" style="display:none">

    </div>



    <div id="dialogView" class="form-group" style="display:none">

    </div>


</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    <link href="@Url.Content("~/Content/themes/base/jquery-ui.min.css")" rel="stylesheet" />
    <script src="@Url.Content("~/Scripts/jquery-3.1.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/MyJs.js")" type="text/javascript"></script>

}


